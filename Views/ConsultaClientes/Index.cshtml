@model IEnumerable<sism.Models.Consultacliente>

@{
    ViewData["Title"] = "ConsultaClientes";
}

<!-- Contenido de la Pagina -->
<div class="content-wrapper">
    <!-- Contenido del Encabezado (Pagina del Encabezado) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>CLIENTES</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active">Clientes</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Contenido Principal -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                    </div>


                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Listado</h3>
                        </div>

                        <div class="card-body">
                            <table id="consultaclientes" class="table-bordered table-striped" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.HoraEntrada)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CamPatente)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CpvRazonsocial)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PesPermanencia)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PesTon)
                                        </th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HoraEntrada)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CamPatente)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CpvRazonsocial)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PesPermanencia)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PesTon)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Detalles", "Details", new { id = item.PesNum }, new { @class = "btn btn-info" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>



                </div>

            </div>

        </div>

    </section>
    <!-- /.contenido -->

</div>

